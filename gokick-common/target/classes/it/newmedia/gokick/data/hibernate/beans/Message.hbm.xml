<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class table="MESSAGES" name="it.newmedia.gokick.data.hibernate.beans.Message">
    <id unsaved-value="null" name="id" column="ID_MESSAGE">
      <generator class="native"/>
    </id>
    <many-to-one column="ID_USER_OWNER" cascade="none" class="it.newmedia.gokick.data.hibernate.beans.User" lazy="proxy" not-null="false" name="userOwner"/>
    <property name="textDetail" column="TEXT_DETAIL"/>
    <property name="approved" column="APPROVED"/>
    <property name="deleted" column="DELETED"/>
    <property name="created" column="CREATED"/>
  </class>
</hibernate-mapping>
