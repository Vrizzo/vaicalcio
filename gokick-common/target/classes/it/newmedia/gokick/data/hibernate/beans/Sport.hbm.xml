<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class table="SPORTS" name="it.newmedia.gokick.data.hibernate.beans.Sport">
    <id unsaved-value="null" name="id" column="ID_SPORT">
      <generator class="native"/>
    </id>
    <set inverse="true" cascade="none" lazy="true" table="PITCHES_TO_SPORTS" name="pitchList">
      <key column="ID_SPORT"/>
      <many-to-many class="it.newmedia.gokick.data.hibernate.beans.Pitch" column="ID_PITCH"/>
    </set>
    <property name="label" column="LABEL"/>
    <property name="keyName" column="KEY_NAME"/>
    <property name="position" column="POSITION"/>
  </class>
</hibernate-mapping>
