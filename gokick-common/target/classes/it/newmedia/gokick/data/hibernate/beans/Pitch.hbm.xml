<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class table="PITCHES" name="it.newmedia.gokick.data.hibernate.beans.Pitch">
    <id unsaved-value="null" name="id" column="ID_PITCH">
      <generator class="native"/>
    </id>
    <many-to-one column="ID_MATCH_TYPE" cascade="none" outer-join="true" class="it.newmedia.gokick.data.hibernate.beans.MatchType" lazy="false" not-null="false" name="matchType"/>
    <many-to-one column="ID_PITCH_COVER" cascade="none" outer-join="true" class="it.newmedia.gokick.data.hibernate.beans.PitchCover" lazy="false" not-null="false" name="pitchCover"/>
    <many-to-one column="ID_PITCH_GROUND" cascade="none" outer-join="true" class="it.newmedia.gokick.data.hibernate.beans.PitchGround" lazy="false" not-null="false" name="pitchGround"/>
    <many-to-one column="ID_PITCH_TYPE" cascade="none" outer-join="true" class="it.newmedia.gokick.data.hibernate.beans.PitchType" lazy="false" not-null="false" name="pitchType"/>
    <many-to-one column="ID_SPORTS_CENTER" cascade="none" class="it.newmedia.gokick.data.hibernate.beans.SportCenter" lazy="false" not-null="false" name="sportCenter"/>
    <set inverse="true" cascade="none" lazy="true" table="PITCHES_TO_SPORTS" name="sportList">
      <key column="ID_PITCH"/>
      <many-to-many class="it.newmedia.gokick.data.hibernate.beans.Sport" column="ID_SPORT"/>
    </set>
  </class>
</hibernate-mapping>
